<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400"
    android:layout_height="match_parent"
    android:background="@drawable/basketball"
    android:onClick="startSportLoggingActivity"

    android:orientation="vertical"


    tools:context="com.herokuapp.sportstat.sportstat.MainActivity">

    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_background"
        >



        <ImageView
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_marginTop="7dp"
            android:layout_centerInParent="true"

            android:src="@drawable/basketball_button"

            >

            </ImageView>



    </RelativeLayout>


</RelativeLayout>




